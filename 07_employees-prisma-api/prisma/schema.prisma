// src/prisma/schema.prisma
generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Department {
  id        Int        @id @default(autoincrement())
  name      String
  employees Employee[]
}

model Employee {
  id           Int        @id @default(autoincrement())
  name         String
  email        String     @unique
  salary       Decimal
  departmentId Int
  department   Department @relation(fields: [departmentId], references: [id])
}
